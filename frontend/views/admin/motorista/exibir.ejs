<body>
  <main id="main" class="main">

    <div class="pagetitle">
      <h1>Cadastrar Motorista</h1>
      <nav>
        <ol class="breadcrumb">
          <li class="breadcrumb-item active"><a href="/admin/">Página Inicial</a></li>
          <li class="breadcrumb-item active">Ver Motorista</li>
        </ol>
      </nav>
    </div><!-- End Page Title -->

    <div class="row">

      <!-- formulario de cadastro -->
      <div class="col-lg-12">
        <section class="section profile">
          <div class="row">
            <!-- Coluna para a imagem e informações básicas -->
            <div class="col-xl-4">
              <div class="card">
                <div class="card-body profile-card pt-4 d-flex flex-column align-items-center">
                  <!-- Adicione a imagem do motorista aqui -->
                  <img src="" alt="Profile" class="rounded-circle">
                  <!-- Substitua com as informações reais do motorista -->
                  <h2 id="nomeMotorista">Nome do Motorista</h2>
                  <h3>Motorista</h3>
                </div>
              </div>
            </div>

            <!-- Coluna para os detalhes do perfil -->
            <div class="col-xl-8">
              <div class="card">
                <div class="card-body pt-3">
                  <!-- Abas de navegação -->
                  <ul class="nav nav-tabs nav-tabs-bordered">
                    <li class="nav-item">
                      <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#profile-overview">Visão Geral</button>
                    </li>
                    <li class="nav-item">
                      <a href="http://localhost:3001/admin/motorista/editar/${id}" class="nav-link" data-bs-toggle="tab" data-bs-target="#profile-edit">Editar Perfil</a>
                    </li>
                    <li class="nav-item">
                      <button class="nav-link text-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">Deletar Motorista</button>
                    </li>
                  </ul>

                  <!-- Conteúdo das abas -->
                  <div class="tab-content pt-2">
                    <!-- Aba de visão geral -->
                    <div class="tab-pane fade show active profile-overview" id="profile-overview">
                      <h5 class="card-title">Detalhes do Perfil</h5>
                      <!-- Adicione um contêiner para os detalhes do motorista -->
                      <div id="detalhes-motorista">
                        <!-- As informações do motorista serão adicionadas dinamicamente aqui -->
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </section>
      </div>
    </div>
  </main>

  <!-- Modal de confirmação para deletar motorista -->
  <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="deleteModalLabel">Confirmação de Deleção</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fechar"></button>
        </div>
        <div class="modal-body">
          Tem certeza que deseja deletar este motorista?
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
          <button type="button" class="btn btn-danger" id="confirmarDelecao">Deletar</button>
        </div>
      </div>
    </div>
  </div>

  <%- include('../partials/_footer.ejs'); -%>

  <!-- Vendor JS Files -->
  <script src="/admin/assets/vendor/apexcharts/apexcharts.min.js"></script>
  <script src="/admin/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
  <script src="/admin/assets/vendor/chart.js/chart.umd.js"></script>
